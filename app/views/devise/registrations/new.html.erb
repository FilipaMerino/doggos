
<div class="session_form_box">
<h2 class="devise_sessions">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                label: false,
                required: true,
                autofocus: true,
                input_html: { class: "session_input", autocomplete: "email" },
                placeholder: 'Email' %>
    <%= f.input :password,
                label: false,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { class: "session_input", autocomplete: "new-password" },
                placeholder: 'Password'%>
    <%= f.input :password_confirmation,
                label: false,
                required: true,
                input_html: { autocomplete: "new-password" },
                placeholder: 'Confirm Password'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class:"session_form_button" %>
  </div>
<% end %>


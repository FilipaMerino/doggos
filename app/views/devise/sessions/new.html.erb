<div class="session_form_box">
  <h2 class="devise_sessions">Log in</h2>
  <div class="sign_up_with_google_facebook">
    <%= image_tag "google.png", alt: "Sign up with Google", class: "sign_up_with_image" %>
    <%= image_tag "facebook.png", alt: "Sign up with Facebook", class: "sign_up_with_image" %>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: {class: "session_input", autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { class: "session_input", autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"session_form_button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

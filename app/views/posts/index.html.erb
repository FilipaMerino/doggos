<div class="blog_design">

  <h1 class="blog_titles">BLOG</h1>
  <div class="posts">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
          <div class="post_presentation">
            <div class="post_styling">
              <h2 class="post_title"><%= post.title %></h2>
              <p class="post_content"><%= truncate(post.content, length: 200) %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= link_to new_post_path(@post) do %>
      <button class="create_new_post_button">
        Create a Post
      </button>
    <% end %>
  </div>

</div>
